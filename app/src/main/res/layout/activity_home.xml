<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/C3"
    android:maxHeight="40sp"
    android:maxWidth="35dp"
    tools:context=".home">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:text="home"
        android:textStyle="bold"
        android:layout_weight="1"
        android:padding="10dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_weight="1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="logout"
        android:textColor="@color/black"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Catering details"
        android:id="@+id/h1"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="View catering"
    android:id="@+id/h2"
    android:layout_below="@id/h1"
    android:padding="10dp"
    android:layout_marginTop="30dp"
    android:textSize="20sp"
    android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order list"
        android:id="@+id/h3"
        android:layout_below="@id/h2"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feed back"
        android:id="@+id/h4"
        android:layout_below="@id/h3"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My profile"
        android:id="@+id/h5"
        android:layout_below="@id/h4"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>


</RelativeLayout>